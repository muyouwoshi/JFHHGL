<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>

    <!-- 流式布局  -->
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!-- 裁切布局自定义属性 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EmojiTextView">
        <attr name="emojiSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalListView">
        <attr name="android_divider" format="boolean" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="android_listSelector" format="reference" />
        <attr name="android_drawSelectorOnTop" format="boolean" />
        <attr name="android_choiceMode" format="integer" />
    </declare-styleable>


    <declare-styleable name="ImgBlurImageView">
        <attr name="blur" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="SelectableRoundedImageView">
        <attr name="sriv_left_top_corner_radius" format="dimension" />
        <attr name="sriv_right_top_corner_radius" format="dimension" />
        <attr name="sriv_left_bottom_corner_radius" format="dimension" />
        <attr name="sriv_right_bottom_corner_radius" format="dimension" />
        <attr name="sriv_border_width" format="dimension" />
        <attr name="sriv_border_color" format="color" />
        <attr name="sriv_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <!-- 倒计时控件自定义属性 -->
    <declare-styleable name="CountDownView">
        <attr name="countDownTime" format="float" />
        <attr name="countDownFormat" format="string" />
    </declare-styleable>

    <declare-styleable name="SwipCardsView">
        <!-- yOffsetStep定义的是卡片之间在y轴方向上的偏移量，单位是dp-->
        <attr name="yOffsetStep" format="dimension" />
        <!-- alpha定义的取值范围是0-100，所以alpha的步长也得在这个范围之内-->
        <attr name="alphaOffsetStep" format="integer" />
        <!-- scale定义的取值范围是0-1，所以scale的步长也得在这个范围之内-->
        <attr name="scaleOffsetStep" format="float" />
    </declare-styleable>

    <declare-styleable name="FixedRatioView">
        <!-- 控件宽度比例-->
        <attr name="mWidthRatio" format="integer" />
        <!-- 控件高度比例-->
        <attr name="mHeightRatio" format="integer" />
    </declare-styleable>

    <declare-styleable name="PointerView">
        <!--指示图标。一个有"android:state_selected"属性的StateListDrawable-->
        <attr name="pointerDrawable" format="reference" />
        <!--图标的间距-->
        <attr name="spacing" format="dimension">
            <!--在图标之外将其向内挤压-->
            <enum name="fill_center" value="-1" />
            <!--在图标之间将其向外撑开-->
            <enum name="fill_spacing" value="-2" />
        </attr>
        <!--指示图标数量-->
        <attr name="pointerCount" format="integer" />
        <!--当前选择的图标位置-->
        <attr name="currentPosition" format="integer" />
    </declare-styleable>

    <declare-styleable name="RatingBarView">
        <attr name="starImageSize" format="dimension"/>
        <attr name="starCount" format="integer"/>
        <attr name="starEmpty" format="reference"/>
        <attr name="starFill" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LiveUserCardIcon">
        <attr name="icon" format="reference" />
        <attr name="textString" format="string|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="showLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LiveCharmStroke">
        <attr name="outerColor" format="color|reference"/>
        <attr name="innerColor" format="color|reference"/>
    </declare-styleable>

</resources>