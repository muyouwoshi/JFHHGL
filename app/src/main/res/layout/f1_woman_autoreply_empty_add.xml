<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_F0F0F0"
    android:paddingTop="@dimen/px165_dp"
    android:paddingBottom="@dimen/px165_dp"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:src="@drawable/nozdhf"
        android:layout_width="@dimen/px195_dp"
        android:layout_height="@dimen/px195_dp" />

    <TextView
        android:id="@+id/no_data_des"
        android:layout_marginTop="@dimen/px48_dp"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:text="@string/auto_reply_no_data"
        android:textColor="@color/color_d2d2d2"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add"
        android:layout_marginTop="@dimen/px82_dp"
        android:text="@string/auto_reply_immediately_add"
        android:gravity="center"
        android:textSize="@dimen/big_font_52"
        android:textColor="@color/white"
        android:background="@drawable/f1_bt_invite_expired"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/no_data_des"
        android:layout_width="@dimen/px604_dp"
        android:layout_height="@dimen/px130_dp" />
</RelativeLayout>