<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/abtest_chat_message_left"/>
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/layout_left"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="36dp"
                android:layout_height="66dp"
                android:background="@drawable/abtest_chat_message_red_package_bg"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_red_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/abtest_chat_message_red_package"/>
                <View
                    android:id="@+id/view_center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_red_package"
                    android:layout_above="@+id/view_center"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:text="赠送的聊天红包"/>
                <TextView
                    android:id="@+id/tv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_red_package"
                    android:layout_below="@+id/view_center"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:text="查看红包"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_right"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="36dp"
                android:layout_height="66dp"
                android:background="@drawable/abtest_chat_message_red_package_bg"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_red_package_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/abtest_chat_message_red_package"/>
                <View
                    android:id="@+id/view_center_right"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_red_package_right"
                    android:layout_above="@+id/view_center_right"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:text="赠送的聊天红包"/>
                <TextView
                    android:id="@+id/tv_look_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_red_package_right"
                    android:layout_below="@+id/view_center_right"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:text="查看红包"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abtest_chat_message_red_package_bottom_text_bg"
                android:textColor="#BBBBBB"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="解锁聊天红包"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/abtest_chat_message_right"/>
    </LinearLayout>
</FrameLayout>