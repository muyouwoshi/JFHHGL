<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.juxin.predestinate.module.logic.baseui.custom.CropEndImageView
            android:id="@+id/update_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/spread_update_bg" />

        <View
            android:id="@+id/update_cancel"
            android:layout_width="@dimen/px90_dp"
            android:layout_height="@dimen/px90_dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px30_dp"
            android:layout_marginTop="@dimen/px120_dp"
            android:background="@drawable/f1_close_btn" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_round_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px60_dp">

        <TextView
            android:id="@+id/update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30_dp"
            android:layout_marginLeft="@dimen/px60_dp"
            android:layout_marginRight="@dimen/px60_dp"
            android:layout_marginTop="@dimen/px30_dp"
            android:background="@drawable/common_round_update"
            android:gravity="center"
            android:padding="@dimen/px20_dp"
            android:textColor="@color/text_ciyao_gray"
            android:textSize="@dimen/px39_sp"
            tools:text="—— 平台升级啦 ——" />

        <ImageView
            android:id="@+id/update_icon"
            android:layout_width="@dimen/px275_dp"
            android:layout_height="@dimen/px275_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px70_dp"
            tools:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/update_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120_dp"
            android:layout_marginLeft="@dimen/px60_dp"
            android:layout_marginRight="@dimen/px60_dp"
            android:layout_marginTop="@dimen/px60_dp"
            android:background="@drawable/common_round_red"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />

        <TextView
            android:id="@+id/update_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px30_dp"
            android:gravity="center"
            android:textColor="@color/color_ciyao"
            android:textSize="@dimen/px39_sp"
            tools:text="旧版本即将停止运营" />
    </LinearLayout>
</LinearLayout>