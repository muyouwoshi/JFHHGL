<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="106dp"
                android:layout_height="106dp"
                tools:context="com.juxin.predestinate.ui.live.GirlLiveEndActivity">

    <ImageView
        android:id="@+id/iv_other_live"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/iv_zhezhao"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/live_zhezhao"/>

    <TextView
        android:id="@+id/tv_nikename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_other_live"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:text="白发小仙女"/>


</RelativeLayout>
