<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:paddingBottom="12dp">

    <com.juxin.predestinate.module.logic.baseui.custom.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_week_star"
                android:layout_width="43.5dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1.4dp"
                android:visibility="gone"
                android:src="@drawable/live_zhouxing"
                />

            <ImageView
                android:id="@+id/iv_zhezhao"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/live_zhezhao"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/iv_zhibo"
                android:layout_width="35.5dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/live_zhibo"/>

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                tools:text="西伯利亚的空气"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="6dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="7155"/>

        </RelativeLayout>
    </com.juxin.predestinate.module.logic.baseui.custom.SquareLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#333333"
        android:textSize="14sp"
        tools:text="幼儿园园长"
        />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:textColor="#999999"
        android:textSize="12sp"
        tools:text="北京昌平"
        />

</LinearLayout>
