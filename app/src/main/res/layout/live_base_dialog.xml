<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_live_base_dialog"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/title"
        android:layout_width="@dimen/blur_circle_size"
        android:layout_height="@dimen/blur_circle_size"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/normal_space"
        android:background="@drawable/ic_live_base_dialog_title"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_space"
        android:textSize="@dimen/txt_big"
        android:textColor="@color/text_ciyao_gray"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/confirm_bt"
        android:layout_width="@dimen/live_dialog_button_width"
        android:layout_height="@dimen/live_dialog_button_height"
        android:background="@drawable/bg_live_dialog_confirm_bt"
        android:layout_margin="@dimen/normal_space"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/txt_big"
        android:text="确定"
        />

    <TextView
        android:id="@+id/cancel_bt"
        android:layout_width="@dimen/live_dialog_button_width"
        android:layout_height="@dimen/live_dialog_button_height"
        android:background="@drawable/bg_live_dialog_cancel_bt"
        android:layout_marginBottom="@dimen/normal_space"
        android:layout_marginLeft="@dimen/normal_space"
        android:layout_marginRight="@dimen/normal_space"
        android:gravity="center"
        android:textColor="@color/text_theme_blue"
        android:textSize="@dimen/txt_big"
        android:text="取消"/>

</LinearLayout>
