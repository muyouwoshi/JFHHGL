<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/color_6F7485"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/px35_dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 头像 -->
            <ImageView
                android:id="@+id/user_head"
                android:layout_width="@dimen/px246_dp"
                android:layout_height="@dimen/px246_dp"
                android:src="@drawable/default_head" />

            <!-- 头像状态 -->
            <ImageView
                android:id="@+id/user_head_status"
                android:layout_width="@dimen/px246_dp"
                android:layout_height="@dimen/px246_dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px246_dp"
            android:layout_marginLeft="@dimen/px48_dp"
            android:layout_marginRight="@dimen/px18_dp"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- 男：爵位相关；女：收益相关 功能panel-->
    <LinearLayout
        android:id="@+id/peerage_container"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/color_6F7485"
        android:orientation="horizontal" />

    <!-- 未绑定手机提示条 -->
    <include layout="@layout/p1_user_verify_mobile" />

    <include layout="@layout/layout_margintop" />

    <!-- 功能panel -->
    <LinearLayout
        android:id="@+id/function_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <include layout="@layout/layout_margintop" />

</LinearLayout>