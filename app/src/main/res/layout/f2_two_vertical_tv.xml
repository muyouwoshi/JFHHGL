<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_footer_height"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/gray">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="7"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/px52_sp"
        tools:text="非常酷炫的人" />

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_half_trans"
        android:paddingLeft="@dimen/px15_dp"
        android:paddingRight="@dimen/px15_dp"
        android:textColor="@color/text_ciyao_gray"
        android:textSize="@dimen/px26_sp"
        tools:text="ID: 233333" />
</LinearLayout>