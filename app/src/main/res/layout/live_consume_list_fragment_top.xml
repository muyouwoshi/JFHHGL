<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:background="@drawable/live_consume_list_middle"
                android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="77.5dp"
            android:layout_height="77.5dp"
            android:layout_alignBottom="@+id/iv_head_bg"
            android:layout_alignRight="@+id/iv_head_bg"
            android:layout_marginBottom="4.5dp"
            android:layout_marginRight="4dp"/>

        <ImageView
            android:id="@id/iv_head_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/live_consume_no_no1"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="虚位以待"
                android:textColor="#ffffff"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_girl"/>

            <ImageView
                android:id="@+id/iv_juewei"
                android:layout_width="31dp"
                android:layout_height="14dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/jue_pinmin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_zuanshi"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/live_zs"/>

            <TextView
                android:id="@+id/tv_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:text="0钻石"
                android:layout_marginLeft="4dp"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
