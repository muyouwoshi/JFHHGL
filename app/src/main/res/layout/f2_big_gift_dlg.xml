    <com.juxin.predestinate.module.logic.baseui.custom.CropEndImageView
        android:id="@+id/big_gift_ceiv_bg"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:src="@drawable/f2_img_bg_liwuquanping"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/big_gift_ceiv_bg"
