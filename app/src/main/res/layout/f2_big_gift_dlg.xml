            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/px50_dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/big_gift_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px80_dp"
            android:textSize="@dimen/px30_sp"
            android:textColor="@color/color_4c4c4c"
            tools:text="丘比特"/>
        <com.juxin.predestinate.ui.user.my.view.MultiImageView
            android:id="@+id/big_gift__img_gift_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px32_dp"
            android:layout_marginTop="@dimen/px26_dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/big_gift_ceiv_bg"
        android:layout_marginLeft="@dimen/px100_dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/big_gift_img_from_head"
            android:layout_width="@dimen/px110_dp"
            android:layout_height="@dimen/px110_dp" />
        <TextView
            android:id="@+id/big_gift_tv_from_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_zhuyao"
            android:layout_marginTop="@dimen/px26_dp"
            android:textSize="@dimen/px34_sp"
            tools:text="星空王子"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/big_gift_ceiv_bg"
        android:layout_marginRight="@dimen/px100_dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/big_gift_img_to_head"
            android:layout_width="@dimen/px110_dp"
            android:layout_height="@dimen/px110_dp" />

        <TextView
            android:id="@+id/big_gift_tv_to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px26_dp"
            android:textColor="@color/color_zhuyao"
            android:textSize="@dimen/px34_sp"
            tools:text="妖姬女王"/>
    </LinearLayout>


