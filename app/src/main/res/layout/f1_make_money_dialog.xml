<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/make_money_img_tip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px560_dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/f1_actimg" />

        <ImageView
            android:id="@+id/make_money_cancel_btn"
            style="@style/icon_middle"
            android:layout_alignRight="@id/make_money_img_tip"
            android:layout_margin="@dimen/px20_dp"
            android:src="@drawable/f1_close_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px50_dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/f1_hot_card_bottom_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/px75_dp">

        <TextView
            android:id="@+id/make_money_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px35_dp"
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px46_sp" />

        <Button
            android:id="@+id/make_money_sure_btn"
            style="@style/button_big"
            android:layout_marginTop="@dimen/px50_dp"
            android:textColor="@color/white"
            android:background="@drawable/f1_boxgobtn_bg"
            android:text="@string/make_money_dialog_btn_text" />
    </LinearLayout>


</LinearLayout>
