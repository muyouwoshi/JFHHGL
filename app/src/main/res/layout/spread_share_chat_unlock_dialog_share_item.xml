<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spread_unlock_share_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/spread_panel_kh_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px38_dp"
        android:layout_marginLeft="@dimen/px50_dp"
        android:layout_marginRight="@dimen/px50_dp"
        android:layout_marginTop="@dimen/px38_dp"
        android:background="@drawable/f2__vip_top__bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/px28_dp">

        <ImageView
            android:layout_width="@dimen/px72_dp"
            android:layout_height="@dimen/px72_dp"
            android:background="@drawable/f2_th_ico" />

        <TextView
            android:id="@+id/remind_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30_dp"
            android:textColor="#d8ab64"
            android:textSize="@dimen/px32_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/spread_share_weixinfirend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weixinhaoy"
                android:layout_width="@dimen/px200_dp"
                android:layout_height="@dimen/px200_dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/margin_normal"
                android:src="@drawable/spread_share_chat_unlock_share_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@string/spread_txt_share_ok"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/weixin_share_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/spread_share_count_text_suffix"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spread_share_weixinpengyouquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pengyouquan"
                android:layout_width="@dimen/px200_dp"
                android:layout_height="@dimen/px200_dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/margin_normal"
                android:src="@drawable/spread_share_chat_unlock_share_penyouquan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@string/spread_txt_share_ok"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/penyouquan_share_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/spread_share_count_text_suffix"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spread_share_qqfirend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qq"
                android:layout_width="@dimen/px200_dp"
                android:layout_height="@dimen/px200_dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/margin_normal"
                android:src="@drawable/spread_share_chat_unlock_share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@string/spread_txt_share_ok"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/qq_share_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/spread_share_count_text_suffix"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spread_share_qqspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qqzone"
                android:layout_width="@dimen/px200_dp"
                android:layout_height="@dimen/px200_dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/margin_normal"
                android:src="@drawable/spread_share_chat_unlock_share_qqzone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@string/spread_txt_share_ok"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/qqzone_share_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/spread_txt_share_ok"
                android:textColor="@color/text_zhuyao_black"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/spread_share_weixinfirend_big"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/f1_bt_invite_expired"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/live_wx_firend" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px15_dp"
            android:text="@string/spread_txt_wechat"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/spread_share_weixinpengyouquan_big"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/f1_bt_invite_expired"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/live_wx_clirce" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px15_dp"
            android:text="@string/spread_txt_wechat"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/live_share_qq_firend_big"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/f1_bt_invite_expired"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/live_qq_firend" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px15_dp"
            android:text="@string/spread_txt_wechat"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/live_share_qq_space_big"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/f1_bt_invite_expired"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/live_qq_space" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px15_dp"
            android:text="@string/spread_txt_wechat"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/spread_share_no"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/f1_bt_invite_expired"
            android:text="@string/spread_txt_see"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/comment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px36_dp"
        android:layout_marginRight="@dimen/px36_dp"
        android:layout_marginTop="@dimen/px30_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_DDDDDD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10_dp"
            android:layout_marginRight="@dimen/px10_dp"
            android:gravity="center_horizontal"
            android:text="@string/share_chat_unlock_dialog_share_item_introduce"
            android:textColor="@color/spread_unlock_gray"
            android:textSize="@dimen/px36_sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_DDDDDD" />
    </LinearLayout>

    <TextView
        android:id="@+id/share_award_tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30_dp"
        android:layout_marginTop="@dimen/px38_dp"
        android:textColor="@color/spread_unlock_gray"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/share_award_tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px38_dp"
        android:layout_marginLeft="@dimen/px30_dp"
        android:layout_marginTop="@dimen/px18_dp"
        android:textColor="@color/spread_unlock_gray"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>
