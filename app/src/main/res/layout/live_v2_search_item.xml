<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/live_search_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@color/white"
    >

    <ImageView
        android:id="@+id/live_search_item_avatar"
        style="@style/avatar_small"
        android:layout_centerVertical="true"
        android:src="@drawable/default_head"
        android:layout_marginLeft="15dp"
        />

    <RelativeLayout
        android:id="@+id/live_search_item_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/px35_dp"
        >

        <TextView
            android:id="@+id/live_search_item_name"
            style="@style/txt_item_nickname"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/live_search_item_state_tv"
            android:textSize="14dp"
            android:textColor="#fc8886"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="直播中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/live_search_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/live_search_item_name"
            android:layout_alignParentLeft="true"
            android:textColor="@color/filter_text_gray_color"
            android:textSize="@dimen/txt_small"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
</LinearLayout>