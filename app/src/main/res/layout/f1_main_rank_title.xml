<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.juxin.library.controls.smarttablayout.SmartTabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/smart_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/color_title_new"
        app:stl_indicatorThickness="@dimen/px9_dp"
        app:stl_indicatorWidth="@dimen/px60_dp"
        app:stl_indicatorCornerRadius="0dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="@color/transparent"
        app:stl_underlineThickness="@dimen/px9_dp"
        app:stl_dividerColor="@color/color_title_new"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@color/color_999999"
        app:stl_defaultTabTextSize="@dimen/px46_sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="auto_center"
        app:stl_drawDecorationAfterTab="false"/>
</LinearLayout>
