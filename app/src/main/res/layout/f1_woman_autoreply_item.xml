<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_height="@dimen/px150_dp">




     <com.mcxtzhang.swipemenulib.SwipeMenuLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >

         <LinearLayout
             android:gravity="center_vertical"
             android:paddingLeft="@dimen/dp_10"
             android:paddingRight="@dimen/dp_10"
             android:paddingTop="@dimen/dp_4"
             android:paddingBottom="@dimen/dp_4"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="50dp">

             <LinearLayout
                 android:id="@+id/voice_layout"
                 android:layout_weight="1"
                 android:visibility="gone"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <LinearLayout
                     android:id="@+id/voice_layout2"
                     android:gravity="center_vertical"
                     android:background="@drawable/woman_auto_reply_bsqp"
                     android:layout_width="wrap_content"
                     android:orientation="horizontal"
                     android:layout_height="wrap_content">

                     <ImageView
                         android:id="@+id/chat_item_voice_right_img"
                         style="@style/chat_item_voice_img"
                         android:src="@drawable/woman_auto_reply_voiceico" />

                     <TextView
                         android:layout_marginLeft="@dimen/dp_10"
                         android:id="@+id/time"
                         android:layout_width="wrap_content"
                         android:text=""
                         android:textColor="@color/color_CACACA"
                         android:layout_height="wrap_content" />

                 </LinearLayout>

             </LinearLayout>



             <TextView
                 android:layout_weight="1"
                 android:text=""
                 android:lines="1"
                 android:ellipsize="end"
                 android:gravity="center_vertical"
                 android:id="@+id/txt_tv"
                 android:layout_marginRight="@dimen/dp_10"
                 android:textColor="@color/hei_color"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

             <ImageView
                 android:id="@+id/switch_iv"
                 android:layout_width="@dimen/px60_dp"
                 android:src="@drawable/woman_auto_reply_item_selector"
                 android:layout_height="@dimen/px60_dp" />

             <TextView
                 android:textSize="@dimen/px30_sp"
                 android:layout_width="wrap_content"
                 android:id="@+id/status"
                 android:layout_height="wrap_content" />
         </LinearLayout>





             <RelativeLayout
                 android:id="@+id/delete_button"
                 android:clickable="true"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:background="@color/color_f76a67">
                 <TextView
                     android:layout_centerInParent="true"
                     android:id="@+id/del_btn"
                     android:text="@string/auto_reply_item_del"
                     android:textColor="@color/white"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </RelativeLayout>




     </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/color_F0F0F0"
        android:layout_height="@dimen/px1_dp"></View>


</LinearLayout>