<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px24_dp"
        android:background="@drawable/shape_round_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px60_dp"
        android:paddingRight="@dimen/px60_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/px45_dp"
            android:text="@string/photo_feel"
            android:textColor="@color/text_zhuyao_black"
            android:textSize="@dimen/px52_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_photo_feel_like"
                    android:layout_width="@dimen/px205_dp"
                    android:layout_height="@dimen/px205_dp"
                    android:layout_margin="@dimen/px30_dp"
                    android:background="@drawable/f1_photo_feel_like_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/photo_feel_like"
                    android:textColor="@color/color_C7C7C7"
                    android:textSize="@dimen/px40_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_photo_feel_unlike"
                    android:layout_width="@dimen/px205_dp"
                    android:layout_height="@dimen/px205_dp"
                    android:layout_margin="@dimen/px30_dp"
                    android:background="@drawable/f1_photo_feel_unlike_unselect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/photo_feel_unlike"
                    android:textColor="@color/color_C7C7C7"
                    android:textSize="@dimen/px40_sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_photo_feel_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px135_dp"
            android:layout_marginBottom="@dimen/px60_dp"
            android:layout_marginTop="@dimen/px60_dp"
            android:background="@drawable/f1_bt_invite_expired"
            android:gravity="center"
            android:padding="@dimen/px30_dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/px48_sp" />
    </LinearLayout>
</LinearLayout>