<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:background="#f5f5f5"
    >

    <LinearLayout
        android:id="@+id/live_chat_item_view"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/live_chat_msg_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="普通"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@drawable/live_chat_msg_txtcolor"
            android:background="@drawable/bg_live_chat_msg_item"
            />
        <TextView
            android:id="@+id/live_chat_barrage_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="弹幕"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@drawable/live_chat_msg_txtcolor"
            android:background="@drawable/bg_live_chat_msg_item"
            />
        <TextView
            android:id="@+id/live_chat_broadcast_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="广播"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@drawable/live_chat_msg_txtcolor"
            android:background="@drawable/bg_live_chat_msg_item"
            />
        <TextView
            android:id="@+id/live_chat_tips_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0/40"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@drawable/live_chat_msg_txtcolor"
            android:background="@drawable/bg_live_chat_msg_item"
            />
    </LinearLayout>

    <Button
        android:id="@+id/live_chat_send_btn"
        android:layout_width="52dp"
        android:layout_height="29.3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_live_chat_send"
        android:text="发送"
        android:textColor="@color/color_999999"
        android:textSize="12dp"
        android:enabled="false"
        android:gravity="center"
        />
    
    <EditText
        android:id="@+id/live_chat_edittext"
        android:layout_width="match_parent"
        android:layout_height="41.3dp"
        android:background="@android:color/transparent"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/live_chat_item_view"
        android:layout_toLeftOf="@id/live_chat_send_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#b0b0b0"
        android:textSize="12.66dp"
        android:imeActionLabel="发送"
        android:imeOptions="actionSend"
        />

</RelativeLayout>