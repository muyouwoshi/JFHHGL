<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_small_round_whit"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="@string/share_dialog_title"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/px42_sp" />

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/px45_dp"
            android:layout_height="@dimen/px45_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/spread_share_dialog_close_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_DDDDDD" />

    <GridView
        android:id="@+id/channels_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px90_dp"
        android:layout_marginTop="@dimen/px90_dp"
        android:horizontalSpacing="@dimen/margin_big"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_big" />
</LinearLayout>