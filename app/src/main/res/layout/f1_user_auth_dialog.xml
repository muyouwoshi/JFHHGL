<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px50_dp"
        android:background="@drawable/shape_round_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/px50_dp">

        <TextView
            android:id="@+id/user_auth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_auth_dialog_home_title"
            android:textColor="@color/text_zhuyao_black"
            android:textSize="@dimen/px56_sp" />

        <ImageView
            style="@style/icon_big"
            android:layout_marginTop="@dimen/px35_dp"
            android:src="@drawable/f1_reztips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px35_dp"
            android:gravity="center_horizontal"
            android:text="@string/user_auth_dialog_content"
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px42_sp" />

        <Button
            android:id="@+id/user_auth_sure_btn"
            style="@style/button_big"
            android:layout_marginLeft="@dimen/px35_dp"
            android:layout_marginRight="@dimen/px35_dp"
            android:layout_marginTop="@dimen/px50_dp"
            android:textColor="@color/white"
            android:background="@drawable/f1_boxgobtn_bg"
            android:text="@string/user_auth_dialog_btn_sure_text" />

        <Button
            android:id="@+id/user_auth_cancel_btn"
            style="@style/button_big"
            android:layout_marginLeft="@dimen/px35_dp"
            android:layout_marginRight="@dimen/px35_dp"
            android:layout_marginTop="@dimen/px50_dp"
            android:background="@color/transparent"
            android:text="@string/user_auth_dialog_btn_cancel_text"
            android:textColor="@color/text_ciyao_gray" />
    </LinearLayout>

</LinearLayout>
