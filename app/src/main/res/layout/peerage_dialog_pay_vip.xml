<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vip_dlg_title_bg"
        android:paddingBottom="@dimen/px45_dp"
        android:paddingLeft="@dimen/px55_dp"
        android:paddingRight="@dimen/px55_dp"
        android:paddingTop="@dimen/px45_dp">

        <RelativeLayout
            android:id="@+id/layout_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/public_title_avager_huise_bg" />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_age_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/layout_avatar"
            android:layout_toRightOf="@+id/layout_avatar"
            android:textColor="@color/white"
            android:text="20岁 • 5km以外"
            android:textSize="@dimen/px39_sp" />

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layout_avatar"
            android:layout_toRightOf="@+id/layout_avatar"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="小友女神"
                android:textSize="@dimen/px45_sp" />

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="4dp"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/peerage_dialog_vip_icon_tag" />

            <ImageView
                android:id="@+id/iv_charm"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/f1_top01" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_avatar"
            android:layout_toRightOf="@+id/layout_avatar"
            android:background="@drawable/peerage_optimize_vip_price_bg"
            android:paddingBottom="@dimen/px9_dp"
            android:paddingLeft="@dimen/px20_dp"
            android:paddingRight="@dimen/px20_dp"
            android:paddingTop="@dimen/px9_dp"
            android:textColor="@color/white"

            android:textSize="@dimen/px30_sp" />

        <ImageView
            android:id="@+id/iv_online_status"
            android:layout_width="@dimen/px126_dp"
            android:layout_height="@dimen/px53_dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/myfriends_online" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#E0BA7E"
                android:textSize="11dp" />
        </FrameLayout>

        <!-- 商品列表-->
        <LinearLayout
            android:id="@+id/layout_goods_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px40_dp"
            android:layout_marginRight="@dimen/px40_dp"
            android:orientation="horizontal" />

        <!-- 支付方式-->
        <LinearLayout
            android:id="@+id/layout_pay_type_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px50_dp"
            android:paddingRight="@dimen/px50_dp" />

        <!-- 充值按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px50_dp"
            android:paddingRight="@dimen/px50_dp"
            android:paddingTop="@dimen/px50_dp">

            <Button
                android:id="@+id/btn_recharge"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/px30_dp"
                android:background="@drawable/abtest_dialog_submit_button_bg"
                android:stateListAnimator="@null"
                android:text="@string/goods_recharge_confirm"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_look_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看vip特权"
                android:textColor="#65BFFD"
                android:textSize="11dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#aaaaaa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话：0731-89746010"
                android:textColor="#aaaaaa"
                android:textSize="11dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />
    </LinearLayout>

</LinearLayout>