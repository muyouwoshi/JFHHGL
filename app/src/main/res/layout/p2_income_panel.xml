<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 女 功能 begin 布局删除需谨慎不然panel无法计算权重weight  inflate 方式问题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="@dimen/px35_dp"
        android:layout_marginRight="@dimen/px35_dp"
        android:layout_marginTop="@dimen/px18_dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/rl_income"
            style="@style/center_income"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="今日预估收入"
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px39_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px45_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px30_sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_base_income"
            style="@style/center_income"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="基础收益"
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px39_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_base_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px45_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px30_sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_active_bonus"
            style="@style/center_income"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="活跃奖金"
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px39_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_active_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px45_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px30_sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_task_subsidy"
            style="@style/center_income"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="任务补贴"
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px39_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_task_subsidy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px45_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/text_zhuyao_black"
                    android:textSize="@dimen/px30_sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 女 功能 end -->

    <LinearLayout
        android:id="@+id/ll_to_make_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px35_dp"
        android:layout_marginLeft="@dimen/px35_dp"
        android:layout_marginRight="@dimen/px35_dp"
        android:background="@drawable/f2_gray_stroke"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/px30_dp">

        <ImageView
            android:layout_width="@dimen/px66_dp"
            android:layout_height="@dimen/px66_dp"
            android:src="@drawable/f2_to_make_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px18_dp"
            android:text="去赚钱"
            android:textColor="@color/text_zhuyao_black"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>
</LinearLayout>